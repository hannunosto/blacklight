<!--suppress XmlUnboundNsPrefix -->
<config>
    <sections>
        <mridang translate="label">
            <label>Code Coverage</label>
            <tab>service</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <settings translate="label">
                    <label>Configuration</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <coverage_mode>
                            <label>Coverage Mode</label>
                            <frontend_type>select</frontend_type>
                            <source_model>blacklight/system_config_mode</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Mode to be used for code coverage.</comment>
                        </coverage_mode>
                        <coverage_driver>
                            <label>Coverage Driver</label>
                            <frontend_type>select</frontend_type>
                            <source_model>blacklight/system_config_driver</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Driver to be used for code coverage.</comment>
                        </coverage_driver>
                        <extension_name>
                            <label>Extension</label>
                            <frontend_type>select</frontend_type>
                            <source_model>blacklight/system_config_extensions</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Extension to be used for code coverage.</comment>
                        </extension_name>
                        <output_path>
                            <label>Output Path</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Path to be used for storing the coverage files and reports.
                                Path must be relative to the Magento base path and must be writeable
                                by the application user.
                            </comment>
                        </output_path>
                    </fields>
                </settings>
            </groups>
        </mridang>
    </sections>
</config>